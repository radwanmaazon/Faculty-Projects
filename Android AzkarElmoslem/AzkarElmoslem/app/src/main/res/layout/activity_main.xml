<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/Zekr"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_margin="15dp"
        android:padding="18dp"
        android:src="@drawable/calling_god1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ok" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ablution"
                    android:layout_width="211dp"
                    android:layout_height="155dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/praying" />

                <ImageView
                    android:id="@+id/Image_Morning"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:srcCompat="@drawable/sun" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Btn_ablution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="الوضوء والصلاة"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/Bt_Morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="النهار والليل"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    app:rippleColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Image_hag"
                    android:layout_width="wrap_content"
                    android:layout_height="168dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/kaaba" />

                <ImageView
                    android:id="@+id/Image_eating"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/eating1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Bt_hag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="الحج والعمرة"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/Bt_eating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="الأكل والشراب"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>